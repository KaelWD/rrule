{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "baseUrl": ".",
    "rootDirs": ["./src/", "./test/"]
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "vitest.config.ts",
    "tsup.config.ts"
  ],
  "exclude": ["node_modules"]
}
